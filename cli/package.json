{
  "name": "@kript/cli",
  "version": "3.0.0",
  "description": "Command-line interface for Kript",
  "type": "module",
  "bin": {
    "kript": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@kript/core": "*",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^13.2.4",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^25.2.3",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
